<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{year}} 年度编程报告 - {{author}}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        {{css}}
    </style>
</head>

<body>
    <div class="orb orb-1"></div>
    <div class="orb orb-2"></div>
    <div class="orb orb-3"></div>

    <div class="container">
        <header class="hero">
            <div class="profile-card glass">
                <div class="avatar">
                    <i class="fas fa-user-astronaut"></i>
                </div>
                <h1>{{author}}</h1>
                <div class="persona-badge">{{persona.title}}</div>
                <p class="subtitle">{{persona.description}}</p>

                <div class="stats-grid">
                    <div class="stat-item">
                        <div class="stat-value">{{formatNumber totalCommits}}</div>
                        <div class="stat-label">总提交</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value">{{formatNumber netLines}}</div>
                        <div class="stat-label">代码净增</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value">{{streakStats.longestStreak}} 天</div>
                        <div class="stat-label">最长连击</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value">{{streakStats.totalActiveDays}} 天</div>
                        <div class="stat-label">活跃天数</div>
                    </div>
                </div>
            </div>
        </header>

        <div class="charts-grid">
            <div class="glass chart-box">
                <h3><i class="fas fa-chart-line"></i> 提交趋势</h3>
                <canvas id="trendChart"></canvas>
            </div>
            <div class="glass chart-box">
                <h3><i class="fas fa-code"></i> 技术栈分布</h3>
                <canvas id="langChart"></canvas>
            </div>
        </div>

        <div class="glass punch-card-box" style="margin-bottom: 40px;">
            <h3><i class="fas fa-clock"></i> 编程时间分布 (Punch Card)</h3>
            <canvas id="punchChart"></canvas>
        </div>

        <div class="glass" style="margin-bottom: 40px;">
            <h3><i class="fas fa-tags"></i> 年度关键词</h3>
            <div class="keyword-cloud">
                {{#each topKeywords}}
                <span class="keyword" style="font-size: {{this.count}}em; opacity: 0.8;">{{this.word}}</span>
                {{/each}}
            </div>
        </div>

        <div class="glass achievements-section" style="margin-bottom: 40px;">
            <h3><i class="fas fa-trophy"></i> 成就解锁</h3>
            <div class="achievements-grid">
                {{#each achievements}}
                <div class="achievement unlocked">
                    <div class="icon">{{this.icon}}</div>
                    <div class="content">
                        <h4>{{this.name}}</h4>
                        <p>{{this.description}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

        <footer>
            Generated by Personal Git Report | {{generatedDate}}
        </footer>
    </div>

    <script>
        Chart.defaults.color = '#a0a0a0';
        Chart.defaults.borderColor = 'rgba(255,255,255,0.05)';
        Chart.defaults.font.family = "'Outfit', sans-serif";

        // Data from Generator
        const data = {{{ chartData }}};

        // Trend Chart
        new Chart(document.getElementById('trendChart'), {
            type: 'line',
            data: {
                labels: data.trends.monthly.map(d => d.date),
                datasets: [{
                    label: '月度提交',
                    data: data.trends.monthly.map(d => d.count),
                    borderColor: '#00f260',
                    backgroundColor: (context) => {
                        const ctx = context.chart.ctx;
                        const gradient = ctx.createLinearGradient(0, 0, 0, 400);
                        gradient.addColorStop(0, 'rgba(0, 242, 96, 0.2)');
                        gradient.addColorStop(1, 'rgba(0, 242, 96, 0)');
                        return gradient;
                    },
                    fill: true,
                    tension: 0.4,
                    pointBackgroundColor: '#00f260',
                    pointBorderColor: '#fff',
                    pointBorderWidth: 2,
                    pointRadius: 4,
                    pointHoverRadius: 6
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                layout: {
                    padding: {
                        top: 10,
                        bottom: 30,
                        left: 10,
                        right: 10
                    }
                },
                plugins: { 
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            title: function(context) {
                                return context[0].label + ' 月';
                            }
                        }
                    }
                },
                scales: {
                    y: { 
                        beginAtZero: true,
                        grid: { display: true, borderDash: [5, 5] },
                        ticks: {
                            padding: 10
                        }
                    },
                    x: { 
                        grid: { display: false },
                        ticks: {
                            padding: 10,
                            callback: function(value, index, values) {
                                const label = this.getLabelForValue(value);
                                return label.substring(5) + '月';
                            }
                        }
                    }
                }
            }
        });

        // Lang Chart
        new Chart(document.getElementById('langChart'), {
            type: 'doughnut',
            data: {
                labels: data.languages.map(l => l.name),
                datasets: [{
                    data: data.languages.map(l => l.count),
                    backgroundColor: ['#00f260', '#0575e6', '#e100ff', '#ff9900', '#00cec9', '#fd79a8', '#fab1a0', '#ffeaa7', '#55efc4', '#81ecec'],
                    borderWidth: 0,
                    hoverOffset: 10
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '70%',
                plugins: {
                    legend: { position: 'bottom', labels: { usePointStyle: true, padding: 20 } }
                }
            }
        });

        // Punch Chart
        const punchData = [];
        data.punchCard.forEach((hours, dayIndex) => {
            hours.forEach((count, hourIndex) => {
                if (count > 0) {
                    punchData.push({
                        x: hourIndex,
                        y: dayIndex,
                        r: Math.min(count * 2, 20) // Scale bubble size
                    });
                }
            });
        });

        const days = ['周日', '周一', '周二', '周三', '周四', '周五', '周六'];

        new Chart(document.getElementById('punchChart'), {
            type: 'bubble',
            data: {
                datasets: [{
                    data: punchData,
                    backgroundColor: '#0575e6'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                layout: {
                    padding: {
                        top: 20,
                        bottom: 40,
                        left: 40,
                        right: 20
                    }
                },
                plugins: { 
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                const hour = context.parsed.x;
                                const day = days[context.parsed.y];
                                const count = Math.round(context.raw.r / 2);
                                return `${day} ${hour}:00 - ${count} 次提交`;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        type: 'category',
                        labels: days,
                        grid: { display: false },
                        offset: true,
                        ticks: {
                            padding: 10
                        }
                    },
                    x: {
                        grid: { display: false },
                        min: -1,
                        max: 24,
                        ticks: { 
                            stepSize: 2,
                            padding: 10,
                            callback: function(value) {
                                return value >= 0 && value <= 23 ? value + '时' : '';
                            }
                        }
                    }
                }
            }
        });
    </script>
</body>

</html>