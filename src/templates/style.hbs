:root {
--bg-color: #0f0c29;
--bg-gradient: linear-gradient(to right, #24243e, #302b63, #0f0c29);
--card-bg: rgba(255, 255, 255, 0.05);
--card-border: rgba(255, 255, 255, 0.1);
--text-primary: #ffffff;
--text-secondary: #b2bec3;
--accent-primary: #6c5ce7;
--accent-secondary: #00cec9;
--success: #00b894;
--danger: #d63031;
}

* {
margin: 0;
padding: 0;
box-sizing: border-box;
}

body {
font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
background: var(--bg-color);
background: var(--bg-gradient);
color: var(--text-primary);
min-height: 100vh;
overflow-x: hidden;
}

.bg-animation {
position: fixed;
top: 0;
left: 0;
width: 100%;
height: 100%;
z-index: -1;
background: radial-gradient(circle at 50% 50%, rgba(108, 92, 231, 0.15), transparent 60%);
}

.container {
max-width: 1200px;
margin: 0 auto;
padding: 40px 20px;
}

/* Glassmorphism Card */
.glass {
background: var(--card-bg);
backdrop-filter: blur(10px);
-webkit-backdrop-filter: blur(10px);
border: 1px solid var(--card-border);
border-radius: 16px;
box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
}

/* Hero Section */
.hero {
text-align: center;
margin-bottom: 60px;
}

.profile .avatar {
width: 100px;
height: 100px;
background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
border-radius: 50%;
margin: 0 auto 20px;
display: flex;
align-items: center;
justify-content: center;
font-size: 40px;
box-shadow: 0 0 20px rgba(108, 92, 231, 0.5);
}

.profile h1 {
font-size: 2.5rem;
margin-bottom: 5px;
background: linear-gradient(to right, #fff, #a29bfe);
-webkit-background-clip: text;
-webkit-text-fill-color: transparent;
}

.persona-badge {
display: inline-block;
padding: 5px 15px;
background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
border-radius: 20px;
font-size: 0.9rem;
font-weight: bold;
margin-bottom: 15px;
box-shadow: 0 0 10px rgba(108, 92, 231, 0.5);
text-transform: uppercase;
letter-spacing: 1px;
}

.profile .subtitle {
color: var(--text-secondary);
max-width: 600px;
margin: 0 auto;
line-height: 1.6;
}

.stats-grid {
display: grid;
grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
gap: 20px;
margin-top: 40px;
}

.stat-card {
padding: 25px;
text-align: center;
transition: transform 0.3s ease;
}

.stat-card:hover {
transform: translateY(-5px);
background: rgba(255, 255, 255, 0.1);
}

.stat-card .icon {
font-size: 24px;
color: var(--accent-secondary);
margin-bottom: 10px;
}

.stat-card .value {
font-size: 2rem;
font-weight: bold;
margin-bottom: 5px;
}

.stat-card .label {
color: var(--text-secondary);
font-size: 0.9rem;
}

/* Charts Section */
.charts-section {
display: grid;
grid-template-columns: 2fr 1fr;
gap: 20px;
margin-bottom: 40px;
}

@media (max-width: 768px) {
.charts-section {
grid-template-columns: 1fr;
}
}

.chart-container {
padding: 20px;
min-height: 300px;
}

.chart-container h3, .punch-card-section h3, .keywords-card h3, .achievements-card h3 {
margin-bottom: 20px;
display: flex;
align-items: center;
gap: 10px;
font-size: 1.2rem;
color: var(--accent-secondary);
}

/* Punch Card */
.punch-card-section {
padding: 20px;
margin-bottom: 40px;
}

/* Grid 2 Cols */
.grid-2-cols {
display: grid;
grid-template-columns: 1fr 1fr;
gap: 20px;
margin-bottom: 40px;
}

@media (max-width: 768px) {
.grid-2-cols {
grid-template-columns: 1fr;
}
}

/* Keywords */
.keywords-card {
padding: 20px;
}

.keyword-cloud {
display: flex;
flex-wrap: wrap;
gap: 15px;
justify-content: center;
align-items: center;
min-height: 200px;
}

.keyword {
color: var(--accent-primary);
transition: all 0.3s ease;
}

.keyword:hover {
transform: scale(1.2);
color: var(--accent-secondary);
text-shadow: 0 0 10px var(--accent-secondary);
}

/* Achievements */
.achievements-card {
padding: 20px;
}

.achievements-grid {
display: grid;
grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
gap: 15px;
}

.achievement {
background: rgba(0, 0, 0, 0.2);
border-radius: 10px;
padding: 15px;
text-align: center;
opacity: 0.5;
filter: grayscale(100%);
transition: all 0.3s ease;
}

.achievement.unlocked {
opacity: 1;
filter: grayscale(0%);
background: rgba(108, 92, 231, 0.1);
border: 1px solid var(--accent-primary);
}

.achievement .badge {
font-size: 30px;
margin-bottom: 10px;
}

.achievement h4 {
font-size: 0.8rem;
margin-bottom: 5px;
}

.achievement p {
font-size: 0.7rem;
color: var(--text-secondary);
display: none; /* Show on hover if needed */
}

.achievement:hover p {
display: block;
position: absolute;
background: #000;
padding: 5px;
border-radius: 5px;
z-index: 10;
}

/* Animations */
.fade-in { animation: fadeIn 1s ease-out forwards; opacity: 0; }
.fade-in-delay-1 { animation: fadeIn 1s ease-out 0.3s forwards; opacity: 0; }
.fade-in-delay-2 { animation: fadeIn 1s ease-out 0.6s forwards; opacity: 0; }
.fade-in-delay-3 { animation: fadeIn 1s ease-out 0.9s forwards; opacity: 0; }
.fade-in-delay-4 { animation: fadeIn 1s ease-out 1.2s forwards; opacity: 0; }

@keyframes fadeIn {
from { opacity: 0; transform: translateY(20px); }
to { opacity: 1; transform: translateY(0); }
}

footer {
text-align: center;
color: var(--text-secondary);
margin-top: 40px;
font-size: 0.9rem;
}