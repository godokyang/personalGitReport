:root {
--bg-color: #0f0c29;
--bg-gradient: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
--card-bg: rgba(255, 255, 255, 0.03);
--card-border: rgba(255, 255, 255, 0.05);
--text-primary: #ffffff;
--text-secondary: #a0a0a0;
--accent-primary: #00f260;
--accent-secondary: #0575e6;
--accent-gradient: linear-gradient(to right, #00f260, #0575e6);
}

* {
margin: 0;
padding: 0;
box-sizing: border-box;
}

body {
font-family: 'Outfit', sans-serif;
background: var(--bg-gradient);
color: var(--text-primary);
min-height: 100vh;
overflow-x: hidden;
line-height: 1.6;
}

/* Background Orbs */
.orb {
position: fixed;
border-radius: 50%;
filter: blur(80px);
z-index: -1;
opacity: 0.4;
}

.orb-1 {
top: -10%;
left: -10%;
width: 50vw;
height: 50vw;
background: #302b63;
}

.orb-2 {
bottom: -10%;
right: -10%;
width: 40vw;
height: 40vw;
background: #0f0c29;
}

.orb-3 {
top: 40%;
left: 40%;
width: 30vw;
height: 30vw;
background: rgba(5, 117, 230, 0.2);
}

.container {
max-width: 1000px;
margin: 0 auto;
padding: 60px 20px;
}

/* Glass Card */
.glass {
background: var(--card-bg);
backdrop-filter: blur(16px);
-webkit-backdrop-filter: blur(16px);
border: 1px solid var(--card-border);
border-radius: 24px;
box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.2);
padding: 30px;
transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.glass:hover {
transform: translateY(-5px);
box-shadow: 0 12px 40px 0 rgba(0, 0, 0, 0.3);
border-color: rgba(255, 255, 255, 0.1);
}

/* Hero Section */
.hero {
text-align: center;
margin-bottom: 80px;
position: relative;
}

.profile-card {
display: inline-block;
padding: 40px 60px;
background: rgba(0, 0, 0, 0.2);
border-radius: 30px;
border: 1px solid rgba(255, 255, 255, 0.05);
}

.avatar {
width: 120px;
height: 120px;
background: var(--accent-gradient);
border-radius: 50%;
margin: 0 auto 25px;
display: flex;
align-items: center;
justify-content: center;
font-size: 50px;
color: #fff;
box-shadow: 0 0 30px rgba(0, 242, 96, 0.3);
position: relative;
}

.avatar::after {
content: '';
position: absolute;
top: -5px;
left: -5px;
right: -5px;
bottom: -5px;
border-radius: 50%;
background: var(--accent-gradient);
z-index: -1;
opacity: 0.5;
filter: blur(10px);
}

h1 {
font-size: 3.5rem;
font-weight: 800;
margin-bottom: 10px;
letter-spacing: -1px;
}

.persona-badge {
display: inline-block;
padding: 8px 20px;
background: rgba(255, 255, 255, 0.1);
border: 1px solid rgba(255, 255, 255, 0.2);
border-radius: 50px;
font-size: 1rem;
font-weight: 600;
color: #00f260;
margin-bottom: 20px;
text-transform: uppercase;
letter-spacing: 2px;
}

.subtitle {
color: var(--text-secondary);
font-size: 1.1rem;
max-width: 600px;
margin: 0 auto;
}

/* Stats Grid */
.stats-grid {
display: grid;
grid-template-columns: repeat(4, 1fr);
gap: 20px;
margin-top: 60px;
}

.stat-item {
text-align: center;
}

.stat-value {
font-size: 2.5rem;
font-weight: 800;
background: var(--accent-gradient);
-webkit-background-clip: text;
-webkit-text-fill-color: transparent;
margin-bottom: 5px;
}

.stat-label {
color: var(--text-secondary);
font-size: 0.9rem;
text-transform: uppercase;
letter-spacing: 1px;
}

/* Section Headers */
h3 {
font-size: 1.5rem;
margin-bottom: 25px;
display: flex;
align-items: center;
gap: 12px;
font-weight: 600;
}

h3 i {
color: #00f260;
}

/* Charts Layout */
.charts-grid {
display: grid;
grid-template-columns: 2fr 1fr;
gap: 25px;
margin-bottom: 40px;
width: 100%;
}

.chart-box {
min-height: 300px;
/* Reduced from 350px */
height: 300px;
/* Fixed height for better aspect ratio */
position: relative;
width: 100%;
overflow: hidden;
/* Prevent canvas overflow */
touch-action: pan-y;
/* Allow vertical scrolling on mobile */
}

canvas {
max-width: 100%;
}

.punch-card-box {
min-height: 250px;
height: 250px;
position: relative;
width: 100%;
overflow: hidden;
touch-action: pan-y;
}

/* Keywords */
.keyword-cloud {
display: flex;
flex-wrap: wrap;
gap: 12px;
justify-content: center;
padding: 20px;
}

.keyword {
background: rgba(255, 255, 255, 0.05);
padding: 8px 16px;
border-radius: 12px;
font-size: 0.9rem;
color: var(--text-secondary);
transition: all 0.3s;
white-space: nowrap;
/* Prevent text wrap breaking layout */
}

.keyword:hover {
background: var(--accent-primary);
color: #000;
transform: scale(1.1);
}

/* Achievements */
.achievements-grid {
display: flex;
flex-direction: column;
gap: 15px;
}

.achievement {
background: rgba(255, 255, 255, 0.03);
border-radius: 16px;
padding: 20px 25px;
text-align: left;
border: 1px solid transparent;
transition: all 0.3s;
display: flex;
flex-direction: row;
align-items: center;
gap: 20px;
}

.achievement:hover {
transform: translateX(5px);
background: rgba(255, 255, 255, 0.05);
}

.achievement.unlocked {
background: linear-gradient(90deg, rgba(0, 242, 96, 0.05), rgba(0, 242, 96, 0));
border-left: 4px solid #00f260;
}

.achievement.locked {
opacity: 0.6;
filter: grayscale(0.8);
}

.achievement .icon {
font-size: 2.5rem;
min-width: 60px;
text-align: center;
margin-bottom: 0;
}

.achievement .content {
flex: 1;
}

.achievement h4 {
font-size: 1.1rem;
margin-bottom: 4px;
color: #fff;
font-weight: 600;
}

.achievement p {
font-size: 0.9rem;
color: var(--text-secondary);
line-height: 1.4;
margin: 0;
}

/* Footer */
footer {
text-align: center;
margin-top: 80px;
color: var(--text-secondary);
font-size: 0.9rem;
opacity: 0.6;
}

@media (max-width: 900px) {

/* Increased breakpoint */
.stats-grid,
.charts-grid {
grid-template-columns: 1fr;
}

h1 {
font-size: 2.5rem;
}

.container {
padding: 40px 15px;
}

/* Compact Projects Section */
.projects-section {
animation: slideUp 0.6s ease-out;
}

.compact-projects-list {
display: flex;
flex-direction: column;
gap: 12px;
max-height: 300px;
overflow-y: auto;
}

.compact-project-item {
display: flex;
justify-content: space-between;
align-items: center;
padding: 12px 16px;
background: rgba(255, 255, 255, 0.02);
border: 1px solid var(--card-border);
border-radius: 8px;
transition: all 0.3s ease;
}

.compact-project-item:hover {
background: rgba(255, 255, 255, 0.05);
border-color: var(--accent-primary);
transform: translateX(4px);
}

.compact-project-item .project-name {
font-size: 0.95rem;
font-weight: 500;
color: var(--text-primary);
}

.compact-project-item .project-commits {
font-size: 0.85rem;
color: var(--text-secondary);
background: rgba(0, 242, 96, 0.1);
padding: 4px 8px;
border-radius: 12px;
color: var(--accent-primary);
font-weight: 500;
}

/* Custom scrollbar for compact projects list */
.compact-projects-list::-webkit-scrollbar {
width: 6px;
}

.compact-projects-list::-webkit-scrollbar-track {
background: rgba(255, 255, 255, 0.05);
border-radius: 3px;
}

.compact-projects-list::-webkit-scrollbar-thumb {
background: var(--accent-primary);
border-radius: 3px;
}

.compact-projects-list::-webkit-scrollbar-thumb:hover {
background: var(--accent-secondary);
}